    "variable": {
        "type": "int",
        "count": "n"
    },
    "input": [
        {
            "name": "n",
            "comment": "number of coins"
        },
        {
            "name": "coins",
            "type": "intarray",
            "length": "n",
            "comment": "the value of each coin"
        },
        {
            "name": "amount",
            "comment": "the desired total amount"
        }
    ],
    "constraint": [
        {
            "type": "sum",
            "term": "x[i]",
            "comp": "=",
            "rval": "y",
            "loopvar": "i"
        },
        {
            "type": "sum",
            "term": "coins[i]*x[i]",
            "comp": "=",
            "rval": "amount",
            "loopvar": "i"
        },
        {
            "type": "loop",
            "loopvar": "i",
            "term": "x[i]",
            "comp": ">=",
            "rval": 0
        }
    ]
}